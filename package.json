{
  "name": "brendantang.net",
  "version": "1.0.0",
  "description": "personal and professional site for brendan tang",
  "repository": "https://github.com/brendantang/brendantang.net",
  "author": "Brendan Tang <b@brendantang.net>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "pull-themes": "git submodule update --recursive --remote",
    "dev": "hugo server --bind=0.0.0.0 --baseURL=http://0.0.0.0:1313 --config config.yml --disableFastRender --enableGitInfo -D -F -v",
    "build": "hugo --config config.yml --enableGitInfo --minify --verbose",
    "push": "touch ./public/.static && tar c ./public $* | dokku tar:in brendantang",
    "deploy": "yarn build && yarn push",
    "draft": "node scripts/new_draft.js"
  }
}
